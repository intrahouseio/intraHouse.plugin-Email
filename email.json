{
  "name": "email",
  "description": "Email plugin",
  "module": "ih_email.js",
  "service": "info",
  "single": true,

  "params": [
    {
      "name": "service",
      "note": "Почтовый сервис",
      "type": "droplist",
      "data": [
        { "id": "-", "name": "-" },
        { "id": "Gmail", "name": "Gmail" },
        { "id": "Mail.ru", "name": "Mail.ru" },
        { "id": "Hotmail", "name": "Hotmail" },
        { "id": "iCloud", "name": "iCloud" },
        { "id": "Yahoo", "name": "Yahoo" },
        { "id": "Yandex", "name": "Yandex.ru" }
      ]
    },
    {
      "name": "host",
      "note": "Адрес (host) почтового сервера",
      "type": "string",
      "val": "mail.ru",
      "visible": "data.service && data.service.length <2"
    },
    {
      "name": "port",
      "note": "Порт почтового сервера",
      "type": "string",
      "val": "465",
      "visible": "data.service && data.service.length <2"
    },
    {
      "name": "user",
      "note": "Адрес отправителя",
      "type": "string",
      "val": "xxxxxx@mail.ru"
    },
    {
      "name": "pass",
      "note": "Пароль",
      "type":"password",
      "val": ""
    }

  ],

  "actions": [{}]
}
